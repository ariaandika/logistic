{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    // "./import.ts" is not equal to "iMpOrt.tS"
    // some os allow case-insensitive
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
